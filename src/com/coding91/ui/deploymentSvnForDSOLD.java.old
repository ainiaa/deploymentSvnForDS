    public void syncFile(String originDir, String dstDir, boolean simulateOnly) {
        Map<String, String> args = buildFileSyncArgs(originDir, dstDir);

        if (simulateOnly) {
            args.put("simulate", "1");
            args.remove("force");
        }
        Sync.syncMain(args);
    }


